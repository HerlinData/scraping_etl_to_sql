# Configuración de credenciales para SaleSys
# Copiar este archivo como .env y completar con los valores reales

# Credenciales SaleSys
SALESYS_USERNAME=tu_usuario_aqui
SALESYS_PASSWORD=tu_password_aqui

# Configuración de manejo de errores (opcional)
# MAX_RETRIES=3
# RETRY_DELAY=60
# MODULE_TIMEOUT=1800
# LOGIN_TIMEOUT=300
# DOWNLOAD_TIMEOUT=600

# Configuración de logging (opcional)
# LOG_LEVEL=INFO
# LOG_RETENTION_DAYS=30

# Configuración de recuperación (opcional)
# PAUSE_ON_CRITICAL_FAILURE=false
# CRITICAL_FAILURE_DELAY=3600

# Configuración de alertas (opcional)
# ENABLE_EMAIL_ALERTS=false
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=tu_email@gmail.com
# SMTP_PASSWORD=tu_app_password
# FROM_EMAIL=tu_email@gmail.com
# ALERT_EMAILS=admin@empresa.com,it@empresa.com

# Alertas Slack (opcional)
# ENABLE_SLACK_ALERTS=false
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
# SLACK_CHANNEL=#alerts
# SLACK_USERNAME=ScrapeBot

# Alertas Webhook (opcional)
# ENABLE_WEBHOOK_ALERTS=false
# WEBHOOK_URL=https://your-webhook-endpoint.com

# Configuración de métricas (opcional)
# METRICS_ENABLED=true
# METRICS_FILE=logs/metrics.json

# Configuración de limpieza (opcional)
# AUTO_CLEANUP_TEMP=true
# TEMP_CLEANUP_HOURS=24